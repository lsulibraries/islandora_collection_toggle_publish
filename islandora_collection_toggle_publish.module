function islandora_collection_toggle_publish_islandora_solr_results_alter(&$search_results) {
  $found_pids = array();
  $publish =[];
  $query = db_query('select *  FROM islandora_collection_toggle_publish_collections');
  $unpublished = $query->fetchAll();
  $unpub_array = array();
  foreach ($unpublished as $item) {
    $unpub_array[$item->pid] = $item->pid;
  }
  foreach ($search_results as $key => $value) {
    $found_pids[] = $value['PID'];
  }
  foreach ($found_pids as $pid) {
    if (isset($unpub_array[$pid])) {
      foreach ($search_results as $key => $value) {
        if ($value['PID'] == $pid) {
          unset($search_results[$key]);
        }
      }
    }
  }
  return $search_results;
}
