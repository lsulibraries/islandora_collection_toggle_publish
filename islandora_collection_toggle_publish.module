function islandora_collection_toggle_publish_islandora_solr_results_alter(&$search_results) {
  module_load_include('inc', 'islandora_collection_toggle_publish', 'includes/utilities');
  $found_pids = array();
  $publish = [];
  $unpub_array = array();
  foreach ($search_results as $key => $value) {
    if (!is_collection(islandora_object_load($value['PID']))) {
      $check = get_parent_collection(islandora_object_load($value['PID']));
    }
    if (!islandora_collection_toggle_publish_collection_is_published($value['PID']) || !islandora_collection_toggle_publish_collection_is_published($check) ) {
      $search_results[$key]['thumbnail_url'] = "/islandora/object/islandora%3Aroot/datastream/TN/view";
      $search_results[$key]['solr_doc'] = array(
        'dc.title' => 'Object is currently unpublished.',
      );
      $search_results[$key]['object_url'] = '';
      $search_results[$key]['object_label'] = 'This object is unpublished';
      $search_results[$key]['published'] = 'unpublished';
    }
  }
}


function islandora_collection_toggle_publish_theme_registry_alter(&$theme_registry) {
  $path = drupal_get_path('module','islandora_collection_toggle_publish');
  $template_files = drupal_find_theme_templates($theme_registry, '.tpl.php', $path);
  foreach ($template_files as $key => $file) {
    $theme_registry[$key]['theme path']= $path;
    $theme_registry[$key] = array_merge($theme_registry[$key], $file);
  }
}
